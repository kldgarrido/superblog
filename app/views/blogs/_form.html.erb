<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_title %></h1>

      
      <% if @blog.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @blog.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      
      <%= form_for @blog do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el titulo del blog" %>
        </div>
        <div class="form-group">
          <%= f.text_area :body, class: "form-control input-lg", placeholder: "Ingresa la descripciÃ³n del blog" %>
        </div>
        <div>
          <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>